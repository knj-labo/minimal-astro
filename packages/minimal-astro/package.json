{
  "name": "minimal-astro",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "minimal-astro": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./content": {
      "types": "./dist/content.d.ts",
      "import": "./dist/content.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/fixtures",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@minimal-astro/compiler": "workspace:*",
    "@minimal-astro/content": "workspace:*",
    "@minimal-astro/internal-helpers": "workspace:*",
    "@minimal-astro/renderer-react": "workspace:*",
    "@minimal-astro/renderer-svelte": "workspace:*",
    "@minimal-astro/renderer-vue": "workspace:*",
    "@minimal-astro/runtime": "workspace:*",
    "@minimal-astro/types": "workspace:*",
    "@minimal-astro/vite-plugin": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "vite": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "bun-types": "latest",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "vite": "^5.0.0"
  }
}
