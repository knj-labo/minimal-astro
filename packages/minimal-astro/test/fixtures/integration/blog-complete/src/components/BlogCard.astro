---
// Hardcoded props for testing - no Astro.props
const title = "Sample Blog Post";
const description = "This is a sample blog post description.";
const author = "John Doe";
const slug = "sample-post";
const tags = ["astro", "test"];
const formattedDate = "January 15, 2024";
---

<article style="border: 1px solid #e1e1e1; border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem; background: white;">
  <h3 style="margin: 0 0 0.5rem 0; font-size: 1.5rem;">
    <a href={`/blog/${slug}`} style="color: #2c3e50; text-decoration: none;">{title}</a>
  </h3>
  
  <div style="display: flex; gap: 1rem; margin-bottom: 1rem; font-size: 0.9rem; color: #666;">
    <span>By {author}</span>
    <span>{formattedDate}</span>
  </div>
  
  <p style="margin-bottom: 1rem; line-height: 1.6;">{description}</p>
  
  <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
    <span style="background: #f1f2f6; color: #2f3542; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.8rem;">astro</span>
    <span style="background: #f1f2f6; color: #2f3542; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.8rem;">test</span>
  </div>
  
  <a href={`/blog/${slug}`} style="color: #3498db; text-decoration: none; font-weight: 500;">
    Read more â†’
  </a>
</article>