{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/minimal-astro": {
      "entry": ["src/index.ts", "src/cli/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["**/*.d.ts", "**/dist/**", "src/cli/build-simple.ts"]
    },
    "packages/internal-helpers": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["**/*.d.ts", "**/dist/**"]
    },
    "packages/integrations/*": {
      "entry": ["index.ts"],
      "project": ["**/*.ts"],
      "ignore": ["**/*.d.ts", "**/dist/**"]
    },
    "packages/markdown/remark": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["**/*.d.ts", "**/dist/**", "test-markdown.ts"]
    },
    "examples/*": {
      "entry": ["vite.config.ts", "serve.js", "src/pages/**/*.astro"],
      "project": ["src/**/*.{ts,tsx,js,jsx,astro}", "*.{ts,js}"],
      "ignore": ["dist/**", "astro.config.js", "lighthouserc.js"]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/test/**",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.vite/**",
    "**/coverage/**",
    "packages/minimal-astro/tests/**"
  ],
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": ["@turbo/codemod", "minimal-astro", "@minimal-astro/compiler", "@minimal-astro/runtime", "@minimal-astro/renderer-react", "@minimal-astro/renderer-vue", "@minimal-astro/renderer-svelte", "react", "react-dom", "vue", "svelte", "@vue/server-renderer"],
  "ignoreWorkspaces": []
}
