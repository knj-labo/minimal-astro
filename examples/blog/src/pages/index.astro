---
import Layout from '../components/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { Counter as ReactCounter } from '../components/Counter.jsx';
import VueCounter from '../components/Counter.vue';
// import SvelteCounter from '../components/Counter.svelte';
import { getCollection } from 'minimal-astro/content';

const posts = await getCollection('post');
const recentPosts = posts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<Layout title="Home">
  <div class="hero">
    <h1>Minimal Astro Blog</h1>
    <p>A demonstration of multi-framework support and Islands Architecture</p>
    <VueCounter client:only="vue" />
    <!-- <SvelteCounter client:only="svelte" /> -->
  </div>

  <section class="demo">
    <h2>Interactive Demo</h2>
    <p>This counter is a React component that only hydrates on the client:</p>
    <ReactCounter client:load />
  </section>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    <div class="posts-grid">
      {recentPosts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          date={post.data.date}
          slug={post.slug}
          author={post.data.author}
        />
      ))}
    </div>
    <a href="/post" class="view-all">View all posts â†’</a>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 1rem;
    margin-bottom: 4rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .demo {
    background: #f9fafb;
    padding: 3rem;
    border-radius: 1rem;
    margin-bottom: 4rem;
  }

  .demo h2 {
    margin-bottom: 1rem;
  }

  .recent-posts h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .view-all {
    display: inline-block;
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .view-all:hover {
    color: #764ba2;
  }
</style>